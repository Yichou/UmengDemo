<resources>

    <style name="edroid_theme_base" parent="android:Theme"></style>

    <style name="edroid_theme_dialog" parent="android:Theme.Dialog"></style>

    <style name="edroid_theme_transparent" parent="edroid_theme_base">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="edroid_theme_no_display" parent="android:Theme.NoDisplay"></style>

    <style name="edroid_theme_transparent_nobar" parent="edroid_theme_transparent">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>